<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/activity_vertical_margin">

	<ImageView
		android:id="@+id/statusImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:src="@drawable/droplet_active"
		app:layout_constraintRight_toLeftOf="@id/nameTextView"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/nameTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="My droplet"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginStart="8dp"
		app:layout_constraintLeft_toRightOf="@id/statusImageView"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/ipAddressTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="123.147.159.167"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginStart="8dp"
		app:layout_constraintLeft_toRightOf="@id/statusImageView"
		app:layout_constraintTop_toBottomOf="@id/nameTextView" />

	<ImageView
		android:id="@+id/distroImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/debian_active"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
